doctype html
head
    link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    title Stock Simulator

body 
    div(class='container-fluid bg-image' style="background-image: url('https://cdn.discordapp.com/attachments/1159815222299725844/1166766242443579463/backy.png?ex=654baebd&is=653939bd&hm=0d2b9a6b4460f2b4573d316111498c25e8b6251aa0cc02449adc5b678fba03ac&'); height: 100vh; background-size: cover; background-repeat: no-repeat; overflow: hidden;")
        div(class="container text-center")
            nav.nav.justify-content-center.bg-dark.bg-opacity-25
                a.nav-link.link-light(href="/") Home 
                a.nav-link.link-light(href="/user") My Activity 
                a.nav-link.link-light(href="/market") Market 
            .bg-dark.bg-opacity-75.p-3.text-start(style="border-radius: 25px; overflow-y: auto; display: inline-block; margin: 25px; width: 90%; max-height: 75%;")
                h1.display-5.text-light.fw-lighter Friends: 
                .input-group.mb-2
                    form.w-100(action="/search" method="get")
                        .input-group
                            input.form-control(type="search" name="search" id="search" placeholder="Add friend" aria-label="Find friend" data-bs-theme="dark")
                            button.btn.btn-primary(type="submit")
                                i.bi.bi-search.icon-white
                    .list-group.w-100.mt-3(data-bs-theme="dark")
                        if(friends && friends.length > 0)
                            for friend in friends 
                                a(class="list-group-item list-group-item-action " href='/user?id=' + friend.id) 
                                    .d-flex.w-100.justify-content-between 
                                        h5.mb-1.fw-lighter #{friend.fName} #{friend.lName}
                                        small #{'>'}
                        else 
                            h5.mb-1.fw-lighter.text-light No users found.
    
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")




