doctype html(style="height: 100%")
head
    link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    title Stock Simulator

body(style="height:100%; overflow-y: hidden;")
    //nav.nav.justify-content-center.bg-dark.bg-opacity-75
        a.nav-link.active(aria-current="page" href="#") Home 
        a.nav-link.link-light(href="#") Activity 
        a.nav-link.link-light(href="#") Market 
    .container-fluid.h-100.w-100.m-0.p-0.bg-image(style="background-image: url('https://cdn.discordapp.com/attachments/1159815222299725844/1166766241965416448/stockmarket.webp?ex=654baebd&is=653939bd&hm=9359dab710c0dc28a7c867e2f74ec62844bc535d6413bba208a27d6510024870&');  height: 100vh; background-size: cover; background-repeat: no-repeat; overflow: hidden; backdrop-filter: brightness(25%);")
        nav.nav.justify-content-center.bg-dark.bg-opacity-25
            a.nav-link.link-light(href="/") Home 
            a.nav-link.link-light(href="/user") My Activity 
            a.nav-link.active(aria-current="page" href="/market") Market 
        .container.text-center(style="height:100%")
            .row.text-center(style="height:100%")
                .col.col-md-4
                    .bg-dark.bg-opacity-75(style="border-radius: 25px; height: 85%; display: inline-block; margin: 25px; width: 90%;")
                        .input-group.m-3
                            h1.display-5.text-light.fw-lighter Watchlist    

                        .list-group.m-4(data-bs-theme="dark")
                            if(stocks && stocks.length > 0)
                                for stock in stocks 
                                    a(class="list-group-item list-group-item-action " href='/stock?symbol=' + stock.symbol) 
                                        .row 
                                            .col
                                                h5.mb-1.fw-lighter #{stock.symbol}
                                                small #{stock.company}  
                                            .col 
                                                h5.mb-1.fw-lighter #{stock.price} 

                                
                                                                          
                .col
                    .input-group.mb-2(style="margin-top: 25px;" data-bs-theme="dark")
                        input.form-control(type="search" placeholder="Search stock by symbol" aria-label="Search stock by symbol")
                        button.btn.btn-primary(type="button")
                            i.bi.bi-search.icon-white
                    .mt-4(style="height: 75%; overflow-y: scroll; display: inline-block; width: 100%;")
                        for market in trending 
                            .bg-dark.bg-opacity-75.p-3.text-start.mt-3(style="border-radius: 25px; overflow-y: hidden; display: inline-block; width: 100%; max-height: 25%;")
                                p.fs-5.text-light.fw-lighter Trending Stocks in #{market.category}
                                .mr-1.ml-1.d-flex.align-items-start(style="height: 20%; overflow-y: hidden; overflow-x: auto;")
                                    for stock in market.stocks
                                        .symbol.rounded-circle.m-1.bg-image(id=stock.symbol style="background-image: url('"+stock.img+"');  height: 100vh; background-size: cover; background-repeat: no-repeat; overflow: hidden; width: 10%; height: 65%; cursor: pointer;")
         
    
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")
    script(src="market.js")
